{# templates/security/login.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Log in!
{% endblock %}
{% block header %}{% endblock %}
{% block body %}
	<div class="row  auth-bg text-center justify-content-center m-0">
		<div class="mt-2">
			{% if app.user %}
				You are logged in as
				{{ app.user.username }},
				<a href="{{ path('app_logout') }}">Logout</a>
			{% endif %}

		</div>
		<div class="card auth-card col-lg-4 col-md-6 col-sm-8 h-50 pb-1 mt-2">
			<div class="card-body px-2 pb-0">
				<form class="form-horizontal" role="form" method="post">
					{% if error %}
						<div class="alert alert-danger">
							{{ error.messageKey|trans(error.messageData, 'security') }}
						</div>
					{% endif %}

					<div class="card-header border-0 h4 text-center bg-white  justify-content-center">
						<strong class="rounded-pill px-3 shadow p-1 brand-badge ">UTOPIA</strong>
					</div>

					<div class="input-field mt-5 mb-4 p-0 ">

						<input type="email" name="email" placeholder="E-mail" value="{{ last_username }}" required/>
						<label for="email">E-Mail</label>
					</div>
					<div class=" input-field mb-4 p-0">
						<input id="inputPassword" type="password" name="password" placeholder="Password" required/>
						<label for="password">Password</label>
					</div>
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
					<div class="col-12 text-center mb-0">
						<button type="submit" class="btn btn-success col-12 ml-auto mt-2">
							<i class="fa fa-btn fa-sign-in"></i>
							Login
						</button>
						<p class="mt-3">Don't have an account?
							<a href="{{ path('registration') }}">
								Sign Up
							</a>
						</p>
					</div>
				</form>

			</div>
		</div>


	</div>
{% endblock %}
