<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8"/>
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{% block stylesheets %}
			{{ encore_entry_link_tags('datepicker') }}
			{{encore_entry_link_tags("app") }}
		{% endblock %}
	</head>
	<body>
		{% block header %}
			<nav class="navbar navbar-expand-lg rounded navbar-dark border-success  fixed-top py-1 mx-5  my-2">
				<div class="container-fluid">
					<a class="navbar-brand brand-badge px-2 shadow rounded" href="#">
						<strong>UTOPIA</strong>
					</a>
					<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#globalNav" aria-controls="globalNav" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="globalNav">
						<div class="navbar-nav">
							<a class="nav-link active" aria-current="page" href="{{ path('home') }}">Home</a>
						</div>
						<div class="navbar-nav border-left border-white ">
							<a class="nav-link active py-0 px-3" style=" border-left:solid 1px rgb(204, 203, 216) ;" aria-current="page" href="{{ path('post_new') }}">
								<i class="fa fa-plus" aria-hidden="true"></i>
								New post
							</a>
						</div>
						<div class="navbar-nav mr-auto">
							<a class="nav-link active nav-link active py-0 px-3" style=" border-left:solid 1px rgb(204, 203, 216) ;" aria-current="page" href="{{ path('talk_index',[app.user]) }}">
								<i class="fa fa-comment" aria-hidden="true"></i>
								Discussion
							</a>
						</div>
					</div>

					<ul class="ml-auto navbar-nav float-right">
						<li class="nav-item py-0 px-3">
							<a class="nav-link pt-2 pb-1" href="{{ path('user_show',{id:app.user.id}) }}">
								{{app.user.firstName}}&nbsp
								<img class="rounded-pill " src="{{ gravatar(app.user.email) }}" * alt="avatar" width="25" height="25"/>
							</a>
						</li>
						{% if app.user %}
							<li class="nav-item " style=" border-left:solid 1px rgb(204, 203, 216) ;">
								<a class="nav-link pt-2 pb-1 " href="{{ path('app_logout') }}">
									<i class="fas fa-sign-out-alt text-white "></i>
								</a>
							</li>
						{% endif %}
					</ul>

				</div>
			</nav>
		{% endblock %}
		<div class="" style="margin-top: 70px"> {% block body %}{% endblock %}
			</div>
			{% block footer %}
				<div class="footer"></div>
			{% endblock %}
			{% block javascripts %}
				<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
				{{ encore_entry_script_tags("app") }}
				{{ encore_entry_script_tags('datepicker') }}

			{% endblock %}
		</body>
	</html>
</body></html>
